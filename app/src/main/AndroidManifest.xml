<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xin.monus.checkit">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".login.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login.RegisterActivity"
            android:label="@string/register_activity_title"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".inbox.InboxActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".projects.ProjectsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".inbox.edit.InboxEditActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".daily.DailyActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".daily.dailyEdit.DailyEditActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".forecast.ForecastActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".projects.actions.ActionsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".projects.actions.ActionEditActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".projects.edit.ProjectEditActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".settings.SettingsActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name=".daily.stepCounter.service.StepService"
            android:enabled="true"
            android:exported="true"/>
    </application>

</manifest>